@model IEnumerable<StudInfoSys.Models.SubjectGradesRecord>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h3 style="color: red;">NOTE: 'Delete' functionality not yet implemented</h3>
<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.RegistrationId })
</p>


@if (Model.Count() <= 0)
{
    <h2>No grade records</h2>
}
else
{
    <table>
        <tr>
            <th style="width: 80px;">
                @Html.DisplayNameFor(model => model.Subject.SubjectCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalGrade)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.SubjectCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinalGrade)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}