@model IEnumerable<StudInfoSys.Models.Student>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th >
            @*@Html.DisplayNameFor(model => model.FullName)*@
            @Html.ActionLink("Name", "Index", new { sortOrder=ViewBag.NameSortParam }) 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th >
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       <td>
            <span class="fullname">@Html.DisplayFor(modelItem => item.FullName)</span>
        </td>
        <td>
            <span class="date-of-birth">@Html.DisplayFor(modelItem => item.DateOfBirth)</span>
        </td>
        <td>
            <span class="address">@Html.DisplayFor(modelItem => item.Address)</span>
        </td>
        <td>
            <span class="email">@Html.DisplayFor(modelItem => item.Email)</span>
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("View Registrations", "Index", "Registration", new { id=item.Id }, null)
        </td>
    </tr>
